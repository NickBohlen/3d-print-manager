<!-- app/templates/components/upload-model.hbs -->
<h2>Upload STL Model</h2>
<form {{on "submit" this.uploadModel}}>
  <div>
    <label for="name">Model Name:</label>
    <input id="name" type="text" value={{this.name}} {{on "input" this.updateName}} />
  </div>

  <div>
    <label for="materialType">Material Type:</label>
    <select id="materialType" value={{this.materialType}} {{on "change" this.updateMaterialType}}>
      <option value="PLA">PLA</option>
      <option value="ABS">ABS</option>
      <option value="PETG">PETG</option>
    </select>
  </div>

  <div>
    <label for="stlFile">Upload STL:</label>
    <input id="stlFile" type="file" accept=".stl" {{on "change" this.updateFile}} />
  </div>

  <button type="submit">Upload</button>
</form>